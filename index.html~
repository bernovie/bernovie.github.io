       <script>
        var timeout;
        var color_register = 0;
        var r = 255;
        var g = 255;
        var b = 255;
        function textChangeColor(col){
            document.body.style.color = col;
        }

         function smoothColors(){
            var smoothTimeout = 0;
            var col;
            var textCol;
            if ( r >= 0){
                if(g >= 0){
                    if(b >= 0){
                        col = "rgb("+10+","+g+","+b+")";
                        textCol = "rgb("+r+","+g+","+b+")";
                        textChangeColor(textCol);
                        changeColor(col);
                        b--;
                        smoothTimeout = setTimeout(smoothColors,10);
                    }
                    else {
                        b = 255;
                    }
                    g--;
                }
                else {
                    g = 255;
                }
                r--;
            }
            else {
                r = 255;
                g = 255;
                b = 255;
                clearTimeout(smoothTimeout);
            }
/*
            for (r = 0; r < 256; r++){
                for(g = 0; g < 256; g++){
                    for(b = 0; b < 256; b++){
                        col = "rgb("+r+","+g+","+b+")";
                        textCol = "rgb("+b+","+g+","+r")";
                        textChangeColor(textCol);
                        changeColor(col);
                        
                    }
                }
            }
*/
                        /*col = "rgb("+210+","+92+","+92+")";
                       textCol = "rgb("+210+","+140+","+92+")";
                        textChangeColor(textCol);
                        changeColor(col);*/
        } 
        function epilepsy(){
                var random = Math.floor(Math.random()*11);
                var col = "green";
                if(random == color_register){
                    if(random < 10){
                        random += 1;
                    }
                    else {
                        random -= 1;
                    }
                }
                color_register = random;
                if(random == 0){
                    col = "red";   
                }
                if(random == 1){
                    col = "blue";
                }
                if(random == 2){
                    col = "yellow";
                }
                if(random == 3){
                    col = "purple";
                }
                if(random == 4){
                    col = "magenta";
                }
                if(random == 5){
                    col = "brown";
                }
                if(random == 6){
                    col = "black";
                }
                if(random == 7){
                    col = "gray";
                } 
                if(random == 8){
                    col = "maroon";
                } 
                if(random == 9){
                    col = "olive";
                }
                if(random == 10){
                    col = "teal";
                } 
                changeColor(col);
               timeout = setTimeout(epilepsy,150);
         }
        function changeColor(col){
            document.body.style.backgroundColor = col;
        }
        function myStopFunction(){
            changeColor("rgba(70, 63, 58, 1)");
            clearTimeout(timeout);
        }
    </script> 
